@model EntityLayer.Concrete.Heading

@{
    ViewBag.Title = "AddHeading";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<br />


<div class="container">

    <h3>Başlık Ekleme</h3>

    <br />
    <br />

    <form class="form-group" method="post">
        <div>
            <h5>Başlık Adı</h5>
            <input type="text" name="HeadingName" class="form-control" autocomplete="off" placeholder="Başlık adını yazınız" />

            <span style="color:red;">
                @Html.ValidationMessageFor(x => x.HeadingName)
            </span>

        </div>

        <br />

        <div>
            <h5>Kategori Adı</h5>
            @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.valueCategory, new { @class="form-control"})

            <span style="color:red;">
                @Html.ValidationMessageFor(x => x.CategoryId)
            </span>

        </div>

        <br />

        <div>
            <h5>Yazar Adı</h5>
            @Html.DropDownListFor(x => x.WriterId, (List<SelectListItem>)ViewBag.valueWriter, new { @class = "form-control" })


            <span style="color:red;">
                @Html.ValidationMessageFor(x => x.WriterId)
            </span>

        </div>

        <br />






        <div class="row">

            <div class="col-md-8">

            </div>

            <div class="col-md-4">

                <div class="row">

                    <div class="col-md-6">
                        <a href="/AdminHeading/Index/" class="btn btn-danger form-control">İptal</a>

                    </div>

                    <div class="col-md-6">
                        <button class="btn btn-success form-control ">Kaydet</button>

                    </div>


                </div>

            </div>

        </div>
    </form>

</div>

<br />