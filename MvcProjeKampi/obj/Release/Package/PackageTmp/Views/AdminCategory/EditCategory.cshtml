@model EntityLayer.Concrete.Category


@{
    ViewBag.Title = "EditCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<br />

<div class="container-fluid">


    <h3>Kategori Güncelle</h3>

    <br />
    <br />



    @using (Html.BeginForm("EditCategory", "AdminCategory", FormMethod.Post))
    {

        <input type="text" hidden class="form-control" name="CategoryId" value="@Html.ValueFor(x => x.CategoryId)" />

        <br />
        <h5>Kategori Adı</h5>
        <input type="text" class="form-control" name="CategoryName" value="@Html.ValueFor(x => x.CategoryName)" />

        <br />
        <h5>Kategori Rengi</h5>
        <input type="color" class="form-control" name="CategoryColor" value="@Html.ValueFor(x => x.CategoryColor)" />

        <br />
        <h5>Açıklama</h5>
        <textarea class="form-control" name="CategoryDescription" rows="4">@Html.ValueFor(x => x.CategoryDescription)</textarea>

        <br />
        <!--
            <h5>Durumu</h5>
            <select class="form-control" name="CategoryStatus">
                <option>Seçini</option>
                <option value="true">Aktif</option>
                <option value="false">Pasif</option>
            </select>

            <br />-->

        <div class="row">

            <div class="col-md-8">

            </div>

            <div class="col-md-4">

                <div class="row">

                    <div class="col-md-6">
                        <a href="/AdminCategory/Index/" class="btn btn-danger form-control">İptal</a>

                    </div>

                    <div class="col-md-6">
                        <button class="btn btn-warning form-control ">Güncelle</button>

                    </div>


                </div>

            </div>

        </div>
    }

</div>
