@using EntityLayer.Concrete
@model List<Admin>


@{

    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-Fy6S3B9q64WdZWQUiU+q4/2Lc9npb8tCaSX9FK7E8HnRr0Jz8D6OP9dO5Vg3Q9ct" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.min.js" integrity="sha384-+sLIOodYLS7CIrQpBjl+C7nPvqq+FbNUBDunl/OZv93DB7Ln/533i8e/mZXLi/P+" crossorigin="anonymous"></script>

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="card-title">Kullanıcı Listesi</h1>
            </div>


        </div>
    </div><!-- /.container-fluid -->
</section>

<button class="btn btn-success" data-toggle="modal" data-target="#modalEkle">Yeni Ekle</button>
<br />
<br />


<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">

        <div class="card-body p-0">
            <table class="table table-striped projects">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Kullanıcı Adı</th>
                        <th>Yetkisi</th>
                        <th>Güncelle</th>
                        <th>Sil</th>


                    </tr>
                </thead>
                <tbody>

                    @foreach (var i in Model)
                    {
                        <tr>
                            <th>@i.AdminId</th>
                            @{
                                string PasswordUserName = "";
                                PasswordUserName = i.UserName;
                                char[] KarakterUserName = PasswordUserName.ToCharArray();

                                foreach (char a in KarakterUserName)
                                {
                                    PasswordUserName += Convert.ToChar(a - 3).ToString();
                                }
                                i.UserName = PasswordUserName.Substring(i.UserName.Length);
                            }
                            <td>@i.UserName</td>

                            <td>
                                @if (i.UserRole == "A")
                                {
                                    <span>Tam Yetki</span>
                                }
                                else
                                {
                                    <span>Kısıtlı Yetki</span>
                                }
                            </td>

                            <td>
                                <a class="btn btn-warning btn-sm" href="/AdminUser/EditUser/@i.AdminId/">
                                    <i class="fas fa-pencil-alt">
                                    </i>
                                    Düzenle
                                </a>

                            </td>
                            <td>
                                <a class="btn btn-danger btn-sm" href="/AdminUser/DeleteUSer/@i.AdminId/">
                                    <i class="fas fa-trash">
                                    </i>
                                    Sil
                                </a>

                            </td>


                        </tr>
                    }






                </tbody>
            </table>
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->

</section>

@Html.Action("PartialAdminUser", "AdminUser")