@using EntityLayer.Concrete
@model List<YetenekHeading>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
    <!--Custom Theme files-->
    <link href="~/webYetenek/css/style.css" rel="stylesheet" type="text/css" media="all" />
    <!--//Custom Theme files -->
    <!--web font-->
    <link href='//fonts.googleapis.com/css?family=Questrial' rel='stylesheet' type='text/css'>
    <link href='//fonts.googleapis.com/css?family=Open+Sans:400,300,300italic,400italic,600,600italic,700,700italic,800,800italic' rel='stylesheet' type='text/css'>
    <!--//web font-->
    <!--circle-chart-->
    <script src="~/webYetenek/js/jquery-1.11.1.min.js"></script>
    <!--//circle-chart-->
    <!--ResponsiveTabs-->
    <script src="~/webYetenek/js/easyResponsiveTabs.js" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#horizontalTab').easyResponsiveTabs({
                type: 'default', //Types: default, vertical, accordion
                width: 'auto', //auto or any width like 600px
                fit: true   // 100% fit in a container
            });
        });
    </script>
    <!--//ResponsiveTabs-->
</head>
<!-- main -->
<body>

    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h2 class="text-black-50" style="font-size:27px; color:black;">Yetenek Listesi</h2>

                </div>

            </div>
        </div><!-- /.container-fluid -->
    </section>

    <a style="margin-left:20px" data-target="#modalEkle2" data-toggle="modal" class="btn btn-success">Yetenek Ekle</a>

    @Html.Action("AddYetenekler", "YetenekKart")
    <a style="margin-left:20px" href="/YetenekKart/EditYetenekHeading/1/" class="btn btn-warning">Başlık Güncelle</a>
    <br />
    <br />


    <div class="main" style="background: url(/webYetenek/images/5.jpg) no-repeat center center fixed">

        @foreach (var i in Model)
        {
            <h1>@i.YetenekHeadingTitleName</h1>
        }


        <div class="main-info w3l">
            <div class="main-row">
                <!-- main-row-one -->
                <div class="profile-grid logo wthree">

                    @foreach (var i in Model)
                    {
                        <img width="110" src="@i.YetenekHeadingImg" alt="">
                        <h2>@i.YetenekHeadingName </h2>
                        <p style="color:#ccc">@i.YetenekHeadingUnvan</p>
                    }


                </div>
                <h3 class="title">Yeteneklerim</h3>

                <div class="col-md-12 skills-right bar_group">




                    @Html.Action("Yetenekler", "YetenekKart")





                </div>

                <!--bar-js-->
                <script src="~/webYetenek/js/bars.js"></script>

                <div class="clear"> </div>
            </div>
        </div>

        <br />

    </div>

    <br />
    <!-- main -->

    <span>

    </span>



</body>


</html>

