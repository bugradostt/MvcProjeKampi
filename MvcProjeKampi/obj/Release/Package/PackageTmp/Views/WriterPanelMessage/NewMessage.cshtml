@model EntityLayer.Concrete.Message

@{
    ViewBag.Title = "NewMessage";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}


<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>İletişim & Mesaj</h1>
            </div>

        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">


            @Html.Action("MessageListMenu", "WriterPanelMessage")

            <div class="col-md-9">
                <div class="card card-primary card-outline">

                    <form action="/WriterPanelMessage/NewMessage/" class="form-group" method="post">
                        <div class="card-header">
                            <h3 class="card-title">Mesaj Gönder</h3>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <div class="form-group">
                                <input class="form-control" name="Status" value="True" hidden>
                            </div>
                            <div class="form-group" hidden>
                                <input class="form-control" name="SenderMail" placeholder="Gönderen :">
                                @Html.ValidationMessageFor(x => x.SenderMail)
                            </div>
                            <div class="form-group">
                                <input class="form-control" name="ReceiverMail" placeholder="Alıcı :">
                                @Html.ValidationMessageFor(x => x.ReceiverMail)
                            </div>
                            <div class="form-group">
                                <input class="form-control" name="Subject" placeholder="Konu :">
                                @Html.ValidationMessageFor(x => x.Subject)
                            </div>
                            <div class="form-group">
                                <textarea id="compose-textarea" name="Content" class="form-control" style="height: 300px"> </textarea>
                                @Html.ValidationMessageFor(x => x.Content)
                            </div>
                            <div class="form-group">
                                <div class="btn btn-default btn-file">
                                    <i class="fas fa-paperclip"></i> Dosya Ekle
                                    <input type="file">
                                </div>
                                <p class="help-block">Max. 32MB</p>
                            </div>
                        </div>
                        <!-- /.card-body -->
                        <div class="card-footer">
                            <div class="float-right">
                                <button type="button" class="btn btn-default"><i class="fas fa-pencil-alt"></i> Taslaklara Kaydet</button>
                                <button type="submit" class="btn btn-primary"><i class="far fa-envelope"></i> Gönder</button>
                            </div>
                            <a href="/WriterPanelMessage/Inbox/" class="btn btn-danger"><i class="fas fa-times"></i> İptal</a>
                        </div>
                        <!-- /.card-footer -->

                    </form>
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div><!-- /.container-fluid -->
</section>
<!-- /.content -->
