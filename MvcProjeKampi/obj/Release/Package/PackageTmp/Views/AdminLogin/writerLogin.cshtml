
@{
    Layout = null;
}

<!doctype html>
<html lang="tr">
<head>
    <title>Yazar Girişi</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="stylesheet" href="/webLoginWriter/css/style.css">

</head>
<body class="img js-fullheight" style="background-image: url(/webLoginWriter/images/bg.jpg);">
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 text-center mb-5">
                    <h2 class="heading-section"></h2>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-4">
                    <div class="login-wrap p-0">
                        <h3 class="mb-4 text-center">Yazar Girişi</h3>
                        <form action="/AdminLogin/WriterLogin/" method="post" class="signin-form">
                            <div class="form-group">
                                <input type="text" class="form-control" name="WriterMail" placeholder="Mail adresi" required>
                            </div>
                            <div class="form-group">
                                <input id="password-field" type="password" name="WriterPassword" class="form-control" placeholder="******" required>
                                <span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="form-control btn btn-primary submit px-3">Giriş Yap</button>
                            </div>
                            <div class="form-group d-md-flex">
                            
                                <div class="w-50 text-md-right">
                                    <a href="#" style="color: #fff"></a>
                                </div>
                            </div>
                        </form>
                        <p class="text-center text-danger>@ViewBag.Mesaj</p>
                        <p class="w-100 text-center">&mdash; &mdash;</p>
                        <div class="social d-flex text-center">
                            <a href="/AdminLogin/Index" target="_blank" class="px-2 py-2 mr-md-1 rounded"> Admin Panel</a>
                            <a href="/Home/HomePage/" target="_blank" class="px-2 py-2 ml-md-1 rounded"> Siteye Git</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="/webLoginWriter/js/jquery.min.js"></script>
    <script src="/webLoginWriter/js/popper.js"></script>
    <script src="/webLoginWriter/js/bootstrap.min.js"></script>
    <script src="/webLoginWriter/js/main.js"></script>

</body>
</html>

