@model EntityLayer.Concrete.Content

@{
    ViewBag.Title = "AddContent";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}


<br />


<div class="container">

    <h3>İçerik Ekleme</h3>

    <br />
    <br />

    <form class="form-group" action="/WriterPanelContent/AddContent" method="post">
        <input type="text" hidden name="HeadingId" value="@ViewBag.degerId" class="form-control" autocomplete="off" />

        <div>
            <h5>İçerik Adı</h5>
            
            <textarea rows="10"  name="ContentValue" class="form-control" placeholder="Bir içerik giriniz..."></textarea>
            <span style="color:red;">
                @Html.ValidationMessageFor(x => x.ContentValue)
            </span>

        </div>

        <br />




        <div class="row">

            <div class="col-md-8">

            </div>

            <div class="col-md-4">

                <div class="row">

                    <div class="col-md-6">
                        <a href="/WriterPanel/AllHeading/" class="btn btn-danger form-control">İptal</a>

                    </div>

                    <div class="col-md-6">
                        <button class="btn btn-success form-control ">Kaydet</button>

                    </div>


                </div>

            </div>

        </div>
    </form>

</div>

<br />