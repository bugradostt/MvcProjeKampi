@model EntityLayer.Concrete.Heading


@{
    ViewBag.Title = "EditHeading";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}



<br />

<div class="container-fluid">


    <h3>Başlık Güncelle</h3>

    <br />

    <form class="form-group" method="post">
        <input type="text" hidden class="form-control" name="HeadingId" value="@Html.ValueFor(x => x.HeadingId)" />

        <input type="text" hidden class="form-control" name="WriterId" value="@Html.ValueFor(x => x.WriterId)" />

        <input type="text" hidden class="form-control" name="HeadingDate" value="@Html.ValueFor(x => x.HeadingDate)" />



        <br />
        <h5>Başlık Adı</h5>
        <input type="text" class="form-control" name="HeadingName" value="@Html.ValueFor(x => x.HeadingName)" />
        <span style="color:red;">
            @Html.ValidationMessageFor(x => x.HeadingName)
        </span>

        <br />

        <h5>Kategori</h5>
        @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.valueCategory, new { @class = "form-control" })
        <span style="color:red;">
            @Html.ValidationMessageFor(x => x.CategoryId)
        </span>

        <br />



        <div class="row">

            <div class="col-md-8">

            </div>

            <div class="col-md-4">

                <div class="row">

                    <div class="col-md-6">
                        <a href="/WriterPanel/MyHeading/" class="btn btn-danger form-control">İptal</a>

                    </div>

                    <div class="col-md-6">
                        <button class="btn btn-warning form-control ">Güncelle</button>

                    </div>


                </div>

            </div>

        </div>
    </form>

</div>


<br />